apiVersion: v1
kind: Secret
metadata:
  name: azure-secret
type: Opaque
data:
  account-name: <base64_encoded_storage_account_name>
  account-key: <base64_encoded_primary_access_key>


#Secret oluştu sırada yaml'a bağlamak var

apiVersion: v1
kind: Pod
metadata:
  name: example-pod
spec:
  containers:
    - name: my-container
      image: my-image
      volumeMounts:
        - name: azure-secret-volume
          mountPath: "/mnt/azure"
  volumes:
    - name: azure-secret-volume
      secret:
        secretName: azure-secret


persistence:
  accessModes:
  - ReadWriteOnce
  annotations: {}
  enabled: true
  existingClaim: ""
  existingVolume: ""
  selector: {}
  size: 8Gi
  storageClass: "your-storage-class"  



security:
  elasticPassword: acibademelkpass
  enabled: true
  existingSecret: ""
  fipsMode: false
  tls:
    autoGenerated: true
    coordinating:
      existingSecret: ""
    data:
      existingSecret: ""
    ingest:
      existingSecret: ""
    keyPassword: ""
    keystoreFilename: elasticsearch.keystore.jks
    keystorePassword: ""
    master:
      existingSecret: ""
    passwordsSecret: ""
    restEncryption: true
    secretKey: ""
    secretKeystoreKey: ""
    secretTruststoreKey: ""
    truststoreFilename: elasticsearch.truststore.jks
    truststorePassword: ""
    usePemCerts: false
    verificationMode: full
  azureStorage:
    accountName: "your-storage-account-name"
    accountKey: "your-storage-account-key"

